<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="2dp"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cvTransactions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="@color/cardview_light_background">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="180dp">

                <ImageView
                    android:id="@+id/tvGreenbag"
                    android:layout_width="75dp"
                    android:layout_height="62dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/income" />

                <TextView
                    android:id="@+id/tvMoneyin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="-16dp"
                    android:text="MONEY IN"
                    app:layout_constraintBottom_toBottomOf="@+id/tvGreenbag"
                    app:layout_constraintStart_toEndOf="@+id/tvGreenbag"
                    app:layout_constraintTop_toTopOf="@+id/tvGreenbag"
                    app:layout_constraintVertical_bias="0.576" />

                <TextView
                    android:id="@+id/tvAmount1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="4dp"
                    android:text="KES 42400"
                    app:layout_constraintEnd_toEndOf="@+id/tvMoneyin"
                    app:layout_constraintStart_toStartOf="@+id/tvMoneyin"
                    app:layout_constraintTop_toBottomOf="@+id/tvMoneyin" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="71dp"
                    android:layout_height="62dp"
                    android:layout_marginTop="32dp"
                    app:layout_constraintEnd_toEndOf="@+id/tvGreenbag"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/tvGreenbag"
                    app:layout_constraintTop_toBottomOf="@+id/tvGreenbag"
                    app:srcCompat="@drawable/balance" />

                <TextView
                    android:id="@+id/tvBalance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="-16dp"
                    android:text="BALANCE"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView2"
                    app:layout_constraintStart_toEndOf="@+id/imageView2"
                    app:layout_constraintTop_toTopOf="@+id/imageView2" />

                <TextView
                    android:id="@+id/tvAmount2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="4dp"
                    android:text="KES 18700"
                    app:layout_constraintEnd_toEndOf="@+id/tvBalance"
                    app:layout_constraintStart_toStartOf="@+id/tvBalance"
                    app:layout_constraintTop_toBottomOf="@+id/tvBalance" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="82dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toStartOf="@+id/tvMoneyout"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/expense" />

                <TextView
                    android:id="@+id/tvMoneyout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-16dp"
                    android:layout_marginEnd="36dp"
                    android:text="MONEY OUT"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/imageView3" />

                <TextView
                    android:id="@+id/tvAmount3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="KES 23700"
                    app:layout_constraintEnd_toEndOf="@+id/tvMoneyout"
                    app:layout_constraintStart_toStartOf="@+id/tvMoneyout"
                    app:layout_constraintTop_toBottomOf="@+id/tvMoneyout" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="81dp"
                    android:layout_height="52dp"
                    android:layout_marginTop="36dp"
                    app:layout_constraintEnd_toEndOf="@+id/imageView3"
                    app:layout_constraintStart_toStartOf="@+id/imageView3"
                    app:layout_constraintTop_toBottomOf="@+id/imageView3"
                    app:srcCompat="@drawable/transactions" />

                <TextView
                    android:id="@+id/tvTransactions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="-16dp"
                    android:layout_marginEnd="36dp"
                    android:text="TRANSACTION"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView4"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/imageView4"
                    app:layout_constraintTop_toTopOf="@+id/imageView4" />

                <TextView
                    android:id="@+id/tvAmount4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="-4dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="80dp"
                    android:layout_marginBottom="10dp"
                    android:text="8"
                    android:textSize="15dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/tvTransactions"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="@+id/tvTransactions"
                    app:layout_constraintTop_toBottomOf="@+id/tvTransactions"
                    app:layout_constraintVertical_bias="0.0" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvExpenses"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


    </LinearLayout>
</ScrollView>